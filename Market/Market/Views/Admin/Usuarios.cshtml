@using PagedList.Mvc
@model PagedList.IPagedList<Market.Models.tbl_usuario>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Users</title>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            background-color: #243b55; /* Color de fondo igual que en VerUsuario */
            color: #fff; /* Texto blanco */
            font-family: sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 30px;
            text-align: center;
        }

        #main-div {
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .row-usuarios {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .usuario-item {
            background-color: rgba(0, 0, 0, 0.5); /* Fondo oscuro con transparencia */
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            width: 100%;
            max-width: 350px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .usuario-item img.cimg {
                width: 65%;
                height: 250px;
                object-fit: cover;
                border-radius: 50%;
                margin-bottom: 15px;
            }

            .usuario-item h4 {
                font-size: 1.2rem;
                color: #808080;
                font-family: 'Arial Rounded MT';
                margin-top: 10px;
            }

            .usuario-item a {
                color: #007bff;
                text-decoration: none;
                font-weight: bold;
            }

                .usuario-item a:hover {
                    text-decoration: underline;
                }

            .usuario-item:hover {
                transform: translateY(-5px);
            }

        .pagination-container {
            margin-top: 30px;
            text-align: center;
        }

        .pagination {
            display: inline-block;
        }

            .pagination li {
                display: inline;
                margin: 0 5px;
            }

            .pagination a,
            .pagination span {
                padding: 8px 12px;
                border: 1px solid #007bff;
                border-radius: 5px;
                color: #007bff;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

            .pagination .active span {
                background-color: #007bff;
                color: #fff;
                border-color: #007bff;
            }

            .pagination a:hover {
                background-color: #007bff;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container">
        <div id="main-div">
            <div class="row-usuarios">
                @{ int x = 0; }
                @if (Model != null)
                {
                    foreach (var usuario in Model)
                    {
                        x++;
                        <div class="col-lg-4 col-md-4 usuario-item">
                            <img class="cimg" src="@Url.Content(usuario.u_imagen)" style="border-radius: 50px;" />
                            <h4 style="color: #808080; font-family: 'Arial Rounded MT'; margin-top: 10px;">
                                @Html.ActionLink(usuario.u_nombre, "VerUsuario", new { id = usuario.u_id })
                            </h4>
                            <p>Email: @usuario.u_email</p>
                            <p>Contacto: @usuario.u_contacto</p>

                            <div>
                                @Html.ActionLink("Eliminar", "DeleteUsuario", new { id = usuario.u_id }, new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="pagination-container">
                <div class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Usuarios", new { page }))
                </div>
            </div>
        </div>
    </div>
</body>
</html>
